<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
<xacro:property name="yaml_file" value="$(find package)/turtle.yaml" />
<xacro:property name="props" value="${xacro.load_yaml(yaml_file)['/**']['ros__parameters']}" />
<xacro:property name="myprop"  value="${props['platform_height']}" />

  <link name="base_link">
    <visual>
      <origin xyz="0 0 0.5" rpy="0 0 0"/> 
      <geometry>
        <box size="0.5 0.5 0.5"/>
      </geometry>
      <material name="White">
        <color rgba="1 1 1 1"/>
      </material>
    </visual>
  </link>

  <link name="platform">
    <visual>
      <origin xyz="0 0 ${myprop}" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.1" radius="0.7"/>
      </geometry>
      <material name="Red">
        <color rgba="1 0 0 1"/>
      </material>
    </visual>
  </link>


  <link name="pole">
    <visual>
      <origin xyz="0 0 1" rpy="0 0 0"/>
      <geometry>
        <cylinder length="1.1" radius="0.03"/>
      </geometry>
      <material name="Blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
  </link>

  <link name="wheel">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <sphere radius="0.09"/>
        </geometry>
          <material name="Yellow">
            <color rgba="1.0 1.0 0.0 1.0"/>
          </material>
    </visual>
  </link>

  <link name="stem">
    <visual>
      <origin xyz="0 0 0.3" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.5" radius="0.02"/>
      </geometry>
      <material name="Green">
        <color rgba="0 1 0 1"/>
      </material>
    </visual>
  </link>

  <joint name="base_to_stem" type="continuous">
    <axis xyz="0 0 1" />
      <parent link="base_link"/>
      <child link="stem"/>
  </joint>

  <joint name="stem_to_wheel" type="continuous">
    <axis xyz="1 0 0" />
      <parent link="stem"/>
      <child link="wheel"/>
  </joint>

  <joint name="base_to_pole" type="fixed">
      <parent link="base_link"/>
      <child link="pole"/>
  </joint>

  <joint name="pole_to_platform" type="continuous">
    <axis xyz="1 0 0" />
      <parent link="pole"/>
      <child link="platform"/>
  </joint>



</robot>
