<?xml version="1.0"?>
<robot name="turtle_bot">
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0.3" rpy="0 0 0"/> <!-- Centered box half above the origin -->
      <geometry>
        <box size="0.5 0.5 0.5"/>
      </geometry>
      <material name="White">
        <color rgba="1 1 1 1"/>
      </material>
    </visual>
  </link>

  <link name="platform">
    <visual>
      <origin xyz="0 0 1" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.1" radius="0.7"/>
      </geometry>
      <material name="Red">
        <color rgba="1 0 0 1"/>
      </material>
    </visual>
  </link>


  <link name="pole">
    <visual>
      <origin xyz="0 0 0.7" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.6" radius="0.05"/>
      </geometry>
      <material name="Blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
  </link>

  <link name="wheel">
    <visual>
      <origin xyz="0 0 0.01" rpy="0 0 0"/>
        <geometry>
          <sphere radius="0.04"/>
        </geometry>
          <material name="Black">
            <color rgba="1 1 1 1"/>
          </material>
    </visual>
  </link>


  <joint name="base_to_pole" type="fixed">
    <axis xyz="0 0 1" />
      <parent link="base_link"/>
      <child link="pole"/>
  </joint>

  <joint name="base_to_platform" type="continuous">
    <axis xyz="0 0 1" />
      <parent link="pole"/>
      <child link="platform"/>
  </joint>


  <joint name="wheel_to_base" type="floating">
      <parent link="base_link"/>
      <child link="wheel"/>
  </joint>

</robot>
