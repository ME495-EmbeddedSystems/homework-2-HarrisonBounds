<?xml version="1.0"?>
<robot name="turtle_bot">
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0.5" rpy="0 0 0"/> 
      <geometry>
        <box size="0.5 0.5 0.5"/>
      </geometry>
      <material name="White">
        <color rgba="1 1 1 1"/>
      </material>
    </visual>
  </link>

  <link name="platform">
    <visual>
      <origin xyz="0 0 1.5" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.1" radius="0.7"/>
      </geometry>
      <material name="Red">
        <color rgba="1 0 0 1"/>
      </material>
    </visual>
  </link>


  <link name="pole">
    <visual>
      <origin xyz="0 0 0.85" rpy="0 0 0"/>
      <geometry>
        <cylinder length="1.4" radius="0.03"/>
      </geometry>
      <material name="Blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
  </link>

  <link name="wheel">
    <visual>
      <origin xyz="0 0 0.08" rpy="0 0 0"/>
        <geometry>
          <sphere radius="0.09"/>
        </geometry>
          <material name="Black">
            <color rgba="1.0 1.0 0.0 1.0"/>
          </material>
    </visual>
  </link>


  <joint name="base_to_pole" type="fixed">
    <axis xyz="0 0 1" />
      <parent link="base_link"/>
      <child link="pole"/>
  </joint>

  <joint name="base_to_platform" type="continuous">
    <axis xyz="0 0 1" />
      <parent link="pole"/>
      <child link="platform"/>
  </joint>


  <joint name="wheel_to_base" type="floating">
      <origin xyz="0 0 0.2" rpy="0 0 0"/>
      <parent link="base_link"/>
      <child link="wheel"/>
  </joint>

</robot>
